TweenService:Create(Welcome, TweenInfo.new(0.8, Enum.EasingStyle.Quint), {TextTransparency = 0, Position = UDim2.new(0,10,0,44)}):Play()

--// AutoFarm Button
local Button = Instance.new("TextButton", MainFrame)
Button.Size = UDim2.new(0, 200, 0, 40)
