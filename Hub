-- close button
local CloseBtn = Instance.new("TextButton", CreditsPopup)
CloseBtn.Size = UDim2.new(0, 100, 0, 30)
CloseBtn.Position = UDim2.new(1, -110, 1, -44)
CloseBtn.Text = "‡∏õ‡∏¥‡∏î"
CloseBtn.Font = Enum.Font.GothamBold
CloseBtn.TextSize = 14
CloseBtn.TextColor3 = Color3.fromRGB(255,255,255)
CloseBtn.BackgroundColor3 = Color3.fromRGB(70, 10, 150)
local closeCorner = Instance.new("UICorner", CloseBtn)
closeCorner.CornerRadius = UDim.new(0,8)
local closeStroke = Instance.new("UIStroke", CloseBtn)
closeStroke.Color = Color3.fromRGB(160,100,255)
closeStroke.Thickness = 1

CloseBtn.MouseEnter:Connect(function()
	TweenService:Create(CloseBtn, TweenInfo.new(0.18), {BackgroundColor3 = Color3.fromRGB(110,40,210)}):Play()
end)
CloseBtn.MouseLeave:Connect(function()
	TweenService:Create(CloseBtn, TweenInfo.new(0.18), {BackgroundColor3 = Color3.fromRGB(70,10,150)}):Play()
end)

CloseBtn.MouseButton1Click:Connect(function()
	TweenService:Create(CreditsPopup, TweenInfo.new(0.28), {Size = UDim2.new(0, 0, 0, 0)}):Play()
	wait(0.28)
	CreditsPopup.Visible = false
	CreditsPopup.Size = UDim2.new(0, 340, 0, 160)
end)

-- open popup when clicking credit label
CreditLabel.MouseButton1Click:Connect(function()
	if not CreditsPopup.Visible then
		CreditsPopup.Visible = true
		CreditsPopup.Size = UDim2.new(0, 0, 0, 0)
		TweenService:Create(CreditsPopup, TweenInfo.new(0.28, Enum.EasingStyle.Back), {Size = UDim2.new(0, 340, 0, 160)}):Play()
	end
end)

--// Toggle UI with RightControl
local Toggle = true
UserInputService.InputBegan:Connect(function(input, gameProcessed)
	if input.KeyCode == Enum.KeyCode.RightControl and not gameProcessed then
		Toggle = not Toggle
		if Toggle then
			TweenService:Create(MainFrame, TweenInfo.new(0.45, Enum.EasingStyle.Quint), {
				Size = UDim2.new(0, 420, 0, 270)
			}):Play()
		else
			TweenService:Create(MainFrame, TweenInfo.new(0.45, Enum.EasingStyle.Quint), {
				Size = UDim2.new(0, 420, 0, 0)
			}):Play()
		end
	end
end)
