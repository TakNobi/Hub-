Button.MouseEnter:Connect(function()
	TweenService:Create(Button, TweenInfo.new(0.22), {BackgroundColor3 = Color3.fromRGB(100,20,200)}):Play()
end)
Button.MouseLeave:Connect(function()
	TweenService:Create(Button, TweenInfo.new(0.22), {BackgroundColor3 = Color3.fromRGB(60,0,120)}):Play()
end)

Button.MouseButton1Click:Connect(function()
	Title.Text = "üöÄ AutoFarm ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ó‡∏≥‡∏á‡∏≤‡∏ô‡πÅ‡∏•‡πâ‡∏ß!"
	getgenv().WebhookURL = "" -- ‡πÅ‡∏Å‡πâ‡πÑ‡∏î‡πâ‡∏ó‡∏µ‡πà‡∏ô‡∏µ‡πà
	getgenv().AutoFarm = true
	loadstring(game:HttpGet("https://raw.githubusercontent.com/caomod2077/Script/refs/heads/main/Farm%20Diamond%20v2.lua"))()
end)

--// Credits small label (bottom-left)
local CreditLabel = Instance.new("TextButton", MainFrame)
CreditLabel.Size = UDim2.new(0, 180, 0, 28)
CreditLabel.Position = UDim2.new(0, 12, 1, -40)
CreditLabel.Text = "Created by galaxy Hub"
CreditLabel.Font = Enum.Font.Gotham
CreditLabel.TextSize = 14
CreditLabel.TextColor3 = Color3.fromRGB(200,200,255)
CreditLabel.BackgroundTransparency = 1
CreditLabel.AutoButtonColor = false

-- hover glow effect on credit label
local creditGlow = Instance.new("UIStroke", CreditLabel)
creditGlow.Color = Color3.fromRGB(140,120,255)
creditGlow.Transparency = 0.8
creditGlow.Thickness = 1

CreditLabel.MouseEnter:Connect(function()
	TweenService:Create(creditGlow, TweenInfo.new(0.2), {Transparency = 0}):Play()
end)
CreditLabel.MouseLeave:Connect(function()
	TweenService:Create(creditGlow, TweenInfo.new(0.2), {Transparency = 0.8}):Play()
end)

